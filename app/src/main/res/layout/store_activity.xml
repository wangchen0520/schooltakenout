<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.v7.widget.Toolbar
		android:id="@+id/store_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#C0C0C0"/>

	<TextView
		android:id="@+id/store_background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@id/store_toolbar"
		android:layout_alignBottom="@id/store_name"
		android:background="@color/subject"/>

	<ImageView
		android:id="@+id/store_img"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_below="@id/store_toolbar"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"/>
	<!--app:srcCompat="@drawable/ic_store_img"-->

	<TextView
		android:id="@+id/store_name"
		android:layout_width="200dp"
		android:layout_height="40dp"
		android:layout_below="@+id/store_img"
		android:layout_centerHorizontal="true"
		android:textSize="30sp"
		android:gravity="center"/>
	<!--android:text="食堂"-->

	<LinearLayout
		android:id="@+id/store_tags"
		android:layout_width="match_parent"
		android:layout_height="27dp"
		android:layout_below="@id/store_name"
		android:layout_centerHorizontal="true"
		android:orientation="horizontal"
		android:gravity="center"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/store_foods"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/store_tags"
		android:layout_above="@id/store_buy"/>

	<RelativeLayout
		android:id="@+id/store_buy"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_alignParentBottom="true"
		android:background="@color/black">
		<TextView
			android:id="@+id/buy_total_price"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
			android:text="123.05"
			android:textSize="30sp"
            android:textColor="@color/white"/>

		<TextView
			android:id="@+id/buy_fee"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:layout_alignStart="@id/buy_total_price"
			android:layout_alignParentBottom="true"
			android:text="配送费2.00"
			android:textSize="15sp"
            android:textColor="@color/gray"
            android:gravity="left"/>

		<Button
			android:id="@+id/buy"
			android:layout_width="80dp"
			android:layout_height="match_parent"
			android:layout_alignParentEnd="true"
			android:background="@color/green"
            android:text="去结算"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"/>
	</RelativeLayout>
</RelativeLayout>